@model ProductCategoryViewModel

@{
    ViewData["Title"] = "Stock Manager";
}

<h2>Stock Manager - Cafeteria</h2>

<br/>
<p>
    <a asp-action="Create" class="custom-button">Create New</a>
</p>

<form asp-controller="Products" asp-action="Index" method="get">
    <p>
        <select asp-for="ProductCategory" class="custom-dropDown" style="border-color: black;" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" name="searchString" style="border-radius: 10px; padding: 5px; padding-left: 10px; padding-right: 10px;"/></label>
        <input type="submit" value="Filter" class="custom-button-mini"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="custom-button-mini">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="custom-button-mini" style="border-color: black;">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="custom-button-mini" style="border-color: red;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>